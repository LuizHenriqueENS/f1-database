<Window x:Class="F1.Excluir"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:F1"
        mc:Ignorable="d"
        Title="Tabela temporária" Height="450" Width="1000">
    <Grid>
        <ListView Margin="10" Name="pilotos">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nome" Width="auto"  DisplayMemberBinding="{Binding Nome}"/>
                    <GridViewColumn Header="Local de Nascimento" Width="auto" DisplayMemberBinding="{Binding LocalDoNascimento}"/>
                    <GridViewColumn Header="País da Lincença" Width="auto" DisplayMemberBinding="{Binding PaisDeLicenca}"/>
                    <GridViewColumn Header="Dt. de Nascimento" Width="auto" DisplayMemberBinding="{Binding DataDoNascimento}"/>
                    <GridViewColumn Header="Dt. de Falecimento" Width="auto" DisplayMemberBinding="{Binding DataDeFalecimento}"/>
                    <GridViewColumn Header="Chave Identificação" Width="auto" DisplayMemberBinding="{Binding ChaveIdentificacao}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
